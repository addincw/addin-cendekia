<section class="bg-gradient-seagreen py-80">
  <div class="container">
    <h2 class="underline">Contact Me</h2>
    <p class="mb-50">
      Dont worry i will not charge or force you work with me, lets connect and
      see if i can help with your business.
    </p>

    <form>
      <div class="row mb-3">
        <div class="col-md-6 mb-3 mb-md-0">
          <div class="form-group">
            <label for="name">Name</label>
            <input
              type="text"
              class="form-control"
              name="name"
              placeholder="Your name"
            />
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="email">Email address</label>
            <input
              type="email"
              class="form-control"
              name="email"
              id="email"
              aria-describedby="emailHelp"
              placeholder="Enter email"
            />
            <small id="emailHelp">
              We'll never share your email with anyone else
            </small>
          </div>
        </div>
      </div>

      <div class="form-group mb-3">
        <label for="subject">Subject</label>
        <input
          type="text"
          class="form-control"
          name="subject"
          placeholder="Your subject"
        />
      </div>
      <div class="form-group mb-50">
        <label for="message">Message</label>
        <textarea
          class="form-control"
          name="message"
          placeholder="Your message"
          style="min-height: 140px"></textarea>
      </div>

      <button
        type="submit"
        class="btn btn-lg btn-gradient-pearlgreen rounded-pill"
      >
        <i class="bi bi-envelope me-1"></i> Send message
      </button>
    </form>
  </div>
</section>
