---
import "@addincendekia/template-gradfull/dist/main.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="home">
    <nav class="navbar navbar-transparent navbar-expand-lg">
      <div class="container">
        <a class="navbar-brand brand-title" href="/">Addin Cendekia</a>
        <!-- desktop only -->
        <div class="d-none d-lg-block flex-grow-0">
          <div class="navbar-nav">
            <a class="nav-link active" aria-current="page" href="/">Home</a>
            <a class="nav-link" href="/projects.html">Projects</a>
            <a class="nav-link" href="/articles.html">Articles</a>
            <!-- <a class="nav-link" href="/about">About</a> -->
          </div>
        </div>
        <!-- mobile only -->
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="offcanvas"
          data-bs-target="#navbarNavAltMarkup"
          aria-controls="navbarNavAltMarkup"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <i class="bi bi-list"></i>
        </button>
        <div
          class="d-lg-none offcanvas offcanvas-start"
          tabindex="-1"
          id="navbarNavAltMarkup"
          aria-labelledby="navbarNavAltMarkupLabel"
        >
          <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="navbarNavAltMarkupLabel">
              Navigation Menu
            </h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="offcanvas"
              aria-label="Close"></button>
          </div>
          <div class="offcanvas-body">
            <nav class="nav flex-column">
              <a class="nav-link active" aria-current="page" href="/">Home</a>
              <a class="nav-link" href="/projects.html">Projects</a>
              <a class="nav-link" href="/articles.html">Articles</a>
            </nav>
          </div>
        </div>
      </div>
    </nav>

    <main>
      <slot />
    </main>

    <!-- contact -->
    <section class="bg-gradient-seagreen py-80">
      <div class="container">
        <h2 class="underline">Contact Me</h2>
        <p class="mb-50">
          Dont worry i will not charge or force you work with me, lets connect
          and see if i can help with your business.
        </p>

        <form>
          <div class="row mb-3">
            <div class="col-md-6 mb-3 mb-md-0">
              <div class="form-group">
                <label for="name">Name</label>
                <input
                  type="text"
                  class="form-control"
                  name="name"
                  placeholder="Your name"
                />
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label for="email">Email address</label>
                <input
                  type="email"
                  class="form-control"
                  name="email"
                  id="email"
                  aria-describedby="emailHelp"
                  placeholder="Enter email"
                />
                <small id="emailHelp">
                  We'll never share your email with anyone else
                </small>
              </div>
            </div>
          </div>

          <div class="form-group mb-3">
            <label for="subject">Subject</label>
            <input
              type="text"
              class="form-control"
              name="subject"
              placeholder="Your subject"
            />
          </div>
          <div class="form-group mb-50">
            <label for="message">Message</label>
            <textarea
              class="form-control"
              name="message"
              placeholder="Your message"
              style="min-height: 140px"></textarea>
          </div>

          <button
            type="submit"
            class="btn btn-lg btn-gradient-pearlgreen rounded-pill"
          >
            <i class="bi bi-envelope me-1"></i> Send message
          </button>
        </form>
      </div>
    </section>

    <footer class="footer">
      <section class="container footer-content py-5">
        <div class="row">
          <div class="col-lg-3 mb-4 mb-lg-0">
            <h4 class="brand-title">Addin Cendekia</h4>
          </div>
          <div class="col-lg-3 mb-4 mb-lg-0">
            <h4>Information</h4>
            <ul class="nav flex-column">
              <li class="nav-item">
                <a class="nav-link" href="/faq">FAQ</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/privacy-policy"> Privacy Policy</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/term-condition">
                  Term and Condition
                </a>
              </li>
            </ul>
          </div>

          <div class="col-lg-3 mb-4 mb-lg-0">
            <h4>Reach Me</h4>
            <ul class="nav flex-column flex-nowrap">
              <li class="nav-item">
                <span class="nav-link">Sidoarjo, East Java. Indonesia</span>
              </li>
              <li class="nav-item">
                <span class="nav-link">project.cendekia.id@gmail.com</span>
              </li>
            </ul>
          </div>
          <div class="col-lg-3">
            <h4>Social Media</h4>
            <div class="socmed-links">
              <a
                class="socmed-link socmed-link--linkedin btn rounded-circle"
                href="https://www.linkedin.com/in/addin-cendekia-9b4a92173/"
                target="_blank"
              >
                <i class="bi bi-linkedin"></i>
              </a>
              <a
                class="socmed-link socmed-link--github btn rounded-circle"
                href="https://github.com/addincw"
                target="_blank"
              >
                <i class="bi bi-github"></i>
              </a>
              <a
                class="socmed-link socmed-link--instagram btn rounded-circle"
                href="https://www.instagram.com/addincendekia/?hl=id"
                target="_blank"
              >
                <i class="bi bi-instagram"></i>
              </a>
            </div>
          </div>
        </div>
      </section>

      <section class="copyright py-3">
        <p class="mb-0 text-center">
          Copyright <strong>Addin Cendekia</strong>
        </p>
      </section>
    </footer>
  </body>
</html>
